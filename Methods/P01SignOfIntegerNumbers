package Methods;

import java.util.Scanner;

public class P01SignOfIntegerNumbers {
    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        int numberForMethod=Integer.parseInt(scanner.nextLine());
        System.out.println(returnMethod(numberForMethod));
    }
    public static String returnMethod(int number){
        String returnString="";
        if(number<0){
            returnString="The number "+number+" is negative.";
        }else if(number>0){
            returnString="The number "+number+" is positive.";
        }else if(number==0){
            returnString="The number 0 is zero.";
        }
        return returnString;
    }
}
