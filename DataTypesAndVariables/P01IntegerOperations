package DataTypesAndVariables;

import java.util.Scanner;

public class P01IntegerOperations {
    public static void main(String[] args){
        Scanner scanner=new Scanner(System.in);
        int first_number=0;
        int second_number=0;
        int third_number=0;
        int forth_number=0;
        for(int i=0;i<4;i++){
            if(i==0){
                first_number=Integer.parseInt(scanner.nextLine());
            }else if(i==1){
                second_number=Integer.parseInt(scanner.nextLine());
            }else if(i==2){
                third_number=Integer.parseInt(scanner.nextLine());
            }else if(i==3){
                forth_number=Integer.parseInt(scanner.nextLine());
            }
        }
        int result=first_number+second_number;
        result=result/third_number;
        result=result*forth_number;
        System.out.println(result);
    }
}
